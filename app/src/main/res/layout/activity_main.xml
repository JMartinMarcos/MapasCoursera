<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.practica.jmm.mapascursera.MainActivity"
    android:layout_height="560dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="@dimen/CIRCULAR_DIMEN_ICON"
                android:layout_height="150dp"
                android:background="@drawable/torre_eiffel"
                android:id="@+id/imbParis"
                android:layout_margin="5dp"
                android:onClick="irMapaParis"/>

            <ImageButton
                android:layout_width="@dimen/CIRCULAR_DIMEN_ICON"
                android:layout_height="@dimen/CIRCULAR_DIMEN_ICON"
                android:background="@drawable/opera_de_sydney"
                android:id="@+id/imbSidney"
                android:layout_margin="5dp"
                android:onClick="irMapaSidney"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageButton
                android:layout_width="@dimen/CIRCULAR_DIMEN_ICON"
                android:layout_height="@dimen/CIRCULAR_DIMEN_ICON"
                android:background="@drawable/nueva_york2"
                android:id="@+id/imbNuevaYork"
                android:layout_margin="5dp"
                android:onClick="irMapaNY"/>

            <ImageButton
                android:layout_width="@dimen/CIRCULAR_DIMEN_ICON"
                android:layout_height="@dimen/CIRCULAR_DIMEN_ICON"
                android:background="@drawable/taj_mahal"
                android:id="@+id/imbNuevaDelhi"
                android:layout_margin="5dp"
                android:onClick="irMapaDelhi"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTituloMaps"
        android:text="Mapas Del Mundo"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textAllCaps="false" />

</RelativeLayout>
